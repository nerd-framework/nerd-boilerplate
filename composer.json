{
  "name": "nerd-framework/nerd-boilerplate",
  "description": "Application boilerplate on Nerd Framework.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Roman Lakhtadyr",
      "email": "roman.lakhtadyr@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.0",
    "nerd-framework/nerd-framework": "dev-master",
    "nerd-framework/nerd-io-backend": "dev-master",
    "nerd-framework/nerd-routing-service": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6"
  },
  "autoload": {
    "files": [
      "boot/Bootstrap.php",
      "app/Routes.php"
    ],
    "psr-4": {
      "tests\\": "tests/",
      "app\\": "app/"
    }
  }
}
